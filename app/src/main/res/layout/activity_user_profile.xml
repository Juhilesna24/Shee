<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.mypc.Shee.UserProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="1">
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/creblebackgroundpink"
                android:src="@drawable/ic_camera_alt_black_cameraa"
                android:padding="30dp"/>

            <TextView
                android:text="Change Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:text="Name"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/Name"
                android:textColor="@color/black"/>

            <TextView
                android:text="Date of Birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/Date"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:text="Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Gender"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rgroup">

                <RadioButton
                    android:text="Female"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Female"
                    android:layout_gravity="left"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:onClick="rbclick"
                    android:checked="false"/>

                <RadioButton
                    android:text="Others"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Others"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:onClick="rbclick"
                    android:checked="false"/>
            </RadioGroup>


            <TextView
                android:text="Email ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Email"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/Email1"
                android:textColor="@color/black"/>

            <TextView
                android:text="Mobile No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mobile"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/Mobile"
                android:textColor="@color/black"/>

            <TextView
                android:text="Emergency Contact No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Emergency1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/Emergency"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:text="State"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/State"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Spinner
                android:layout_width="296dp"
                android:layout_height="40dp"

                android:id="@+id/State1"
                android:textAlignment="center"
                android:layout_weight="0.19" />

            <TextView
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Password"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/Password1"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:text="Confirm Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ConfirmPassword"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ConfirmPassword1"
                android:textColor="@color/black"/>

            <Button
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RegisterButton"
                android:textStyle="normal|bold"
                android:background="@color/colorAccent"/>

            <TextView
                android:text="Already Registered ? Sign in here"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textviewSignin" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
